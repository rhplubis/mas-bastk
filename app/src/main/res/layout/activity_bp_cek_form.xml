<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custome_btn_green"
    tools:context=".bp.BpCekFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ggray">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_yellow"
                android:textColor="@color/white"
                android:text="Dispatcher Checklist"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient_1"
            android:layout_weight="1">
                <ScrollView
                    android:id="@+id/parent_sv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@drawable/custome_btn_green"-->
                            <!--android:orientation="vertical"-->
                            <!--android:gravity="center">-->
                            <!--<ImageView-->
                                <!--android:layout_width="100dp"-->
                                <!--android:layout_height="100dp"-->
                                <!--android:layout_marginTop="10dp"-->
                                <!--android:layout_marginBottom="10dp"-->
                                <!--android:src="@mipmap/ic_car_red" />-->
                            <!--<TextView-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:gravity="center"-->
                                <!--android:textSize="18sp"-->
                                <!--android:textColor="@color/text_no_item"-->
                                <!--android:textStyle="bold"-->
                                <!--android:text="BERITA ACARA SERAH TERIMA KENDARAAN TARIKAN"/>-->
                        <!--</LinearLayout>-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorOrange"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custome_btn_green"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@mipmap/ic_icon_new" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/text_no_item"
                                android:textStyle="bold"
                                android:text="BERITA ACARA SERAH TERIMA KENDARAAN TARIKAN"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="VENDOR"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_hint"/>
                                <AutoCompleteTextView
                                    android:id="@+id/et_vendor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:focusable="false"
                                    android:enabled="false"
                                    android:maxLines="3"
                                    android:inputType="textCapCharacters"
                                    android:textColor="@color/text_main_menu"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="@drawable/background_gradient_1"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Pada Hari Ini Tanggal"/>

                                <EditText
                                    android:id="@+id/et_tanggal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:focusable="false"
                                    android:enabled="false"
                                    android:textColor="@color/blue_gradient_end"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Pukul"/>
                                <EditText
                                    android:id="@+id/et_pukul"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:focusable="false"
                                    android:enabled="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Telah Terima 1 (satu) Unit Kendaraan"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Type Unit"
                                    android:textColor="@color/text_hint"/>
                                <EditText
                                    android:id="@+id/et_typeunit"
                                    android:textSize="16sp"
                                    android:layout_width="match_parent"
                                    android:layout_weight="300"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:inputType="textCapCharacters"
                                    android:textColor="@color/text_main_menu"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Merk/Type Kendaraan"
                                    android:textColor="@color/text_hint"/>
                                <EditText
                                    android:id="@+id/et_merktype"
                                    android:textSize="16sp"
                                    android:layout_width="match_parent"
                                    android:layout_weight="300"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:inputType="textCapCharacters"
                                    android:textColor="@color/text_main_menu"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Tahun "/>
                                <EditText
                                    android:id="@+id/et_tahun"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="STNK atas nama"/>
                                <EditText
                                    android:id="@+id/et_stnk_an"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="No Polisi"/>
                                <EditText
                                    android:id="@+id/et_nopol1"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="300"
                                    android:singleLine="true"
                                    android:maxLength="2"
                                    android:hint="xx"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:editable="false"
                                    android:nextFocusDown="@id/et_nopol2"
                                    android:inputType="textCapCharacters"
                                    android:background="@drawable/edittext_style"
                                    android:gravity="center"
                                    android:textColor="@color/blue_gradient_end"/>
                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/text_hint"/>
                                <EditText
                                    android:id="@+id/et_nopol2"
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="300"
                                    android:singleLine="true"
                                    android:maxLength="4"
                                    android:hint="xxxx"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:numeric="integer"
                                    android:nextFocusDown="@id/et_nopol3"
                                    android:background="@drawable/edittext_style"
                                    android:gravity="center"
                                    android:textColor="@color/blue_gradient_end"/>
                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/text_hint"/>
                                <EditText
                                    android:id="@+id/et_nopol3"
                                    android:layout_width="10dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="300"
                                    android:singleLine="true"
                                    android:maxLength="3"
                                    android:hint="xxx"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:inputType="textCapCharacters"
                                    android:background="@drawable/edittext_style"
                                    android:gravity="center"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="KM Pada saat ditarik"/>
                                <EditText
                                    android:id="@+id/et_kmditarik"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:inputType="number"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Meter Bensin"/>
                                <EditText
                                    android:id="@+id/et_meterbensin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:inputType="number"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <!--<LinearLayout-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:gravity="center"-->
                                <!--android:orientation="horizontal">-->
                                <!--<ImageView-->
                                    <!--android:layout_width="100dp"-->
                                    <!--android:layout_height="100dp"-->
                                    <!--android:src="@mipmap/ic_bensin"/>-->
                            <!--</LinearLayout>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="CABANG :"/>
                                <EditText
                                    android:id="@+id/et_cabang"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="No Mesin"/>
                                <EditText
                                    android:id="@+id/et_nomesin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="No Rangka"/>
                                <EditText
                                    android:id="@+id/et_norangka"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Warna"/>
                                <EditText
                                    android:id="@+id/et_warna"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Diisi oleh PIC Penyimpanan"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="KM saat diterima"/>
                                <EditText
                                    android:id="@+id/et_kmditerima"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:inputType="number"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp">
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:text="Lokasi Pool"/>
                                <EditText
                                    android:id="@+id/et_lokasipool"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="300"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textColor="@color/blue_gradient_end"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">
                                <Button
                                    android:id="@+id/btn_next"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_button_green"
                                    android:text="NEXT"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorOrange"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>